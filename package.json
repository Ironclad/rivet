{
  "name": "@ironclad/rivet",
  "packageManager": "yarn@3.5.0",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "yarn workspace @ironclad/rivet-app run dev",
    "release-node": "node --loader ts-node/esm --loader ./.pnp.loader.mjs release-node.mts",
    "build-lib": "yarn workspace @ironclad/rivet-core run build && yarn workspace @ironclad/rivet-node run build"
  },
  "devDependencies": {
    "@swc/core": "^1.3.59",
    "@types/eslint": "^8",
    "@types/node": "^20.2.3",
    "@types/yargs": "^17",
    "esbuild": "^0.17.18",
    "eslint": "^8.40.0",
    "rollup": "^3.21.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "yargs": "^17.7.2",
    "zx": "^7.2.2"
  },
  "resolutions": {
    "jest-mock": "^28.1.0"
  },
  "volta": {
    "node": "20.2.0",
    "yarn": "3.5.0"
  }
}
